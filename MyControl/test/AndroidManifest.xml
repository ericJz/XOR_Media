<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testmycontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shake.TestShakeActivity"
            android:label="@string/title_activity_test_shake"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".floatview.TestFloatViewActivity"
            android:label="@string/title_activity_test_float_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".draglayout.TestDragLayoutActivity"
            android:label="@string/title_activity_test_drag_layout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.testmycontrol.virtualkeyboard.TestVirtualKeyboardActivity"
            android:label="@string/title_activity_test_virtual_keyboard" >
        </activity>
    </application>

</manifest>