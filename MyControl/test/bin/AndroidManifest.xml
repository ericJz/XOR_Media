<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.example.testmycontrol">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.example.testmycontrol.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_test_shake" android:name="com.example.testmycontrol.shake.TestShakeActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:label="@string/title_activity_test_float_view" android:name="com.example.testmycontrol.floatview.TestFloatViewActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:label="@string/title_activity_test_drag_layout" android:name="com.example.testmycontrol.draglayout.TestDragLayoutActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:label="@string/title_activity_test_virtual_keyboard" android:name="com.example.testmycontrol.virtualkeyboard.TestVirtualKeyboardActivity">
        </activity>
        <service android:name="com.xormedia.mylib.xhr"/>
    </application>

    <!-- xhr需要的权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- pageManage需要的权限 -->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.REORDER_TASKS"/>
    <!-- show Dialog -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

</manifest>
